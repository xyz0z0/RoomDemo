<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_add_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add User"/>

    <Button
        android:id="@+id/btn_add_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add_normal"
        app:layout_constraintTop_toBottomOf="@id/btn_add_user"
        />

    <Button
        android:id="@+id/btn_add_flow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add_flow"
        app:layout_constraintTop_toBottomOf="@id/btn_add_normal"
        />

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        app:layout_constraintTop_toBottomOf="@id/btn_add_flow"/>

    <Button
        android:id="@+id/btn_move_db"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MoveDb"
        app:layout_constraintTop_toBottomOf="@id/btn_delete"/>

    <Button
        android:id="@+id/btn_restore_db"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="StoreDb"
        app:layout_constraintTop_toBottomOf="@id/btn_move_db"/>

</android.support.constraint.ConstraintLayout>